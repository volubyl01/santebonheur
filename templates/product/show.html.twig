{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
<div class="container-sm w-50 bg-warning text-dark mt-5">
    <h1 class="text-center text-white p-5">{{ product.name }}</h1>

    <table class="table class="table table-responsive table-hover ">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ product.category }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Quantité</th>
                <td>{{ product.quantity }}</td>
            </tr>
            <tr>
                <th>Origine</th>
                <td>{{ product.origin }}</td>
            </tr>
            
        </tbody>
    </table>
<div class="d-flex justify-content-between">
    
    <a href="{{ path('app_product_index') }}"><button type="button" class="btn btn-primary m-3">Retour à la liste</button></a>
     {% if is_granted('ROLE_USER') %}
       <a href="{{ path('app_product_edit', {'id': product.id}) }}"><button type="button" class="btn btn-info m-3">Modifier</button></a>
       {{ include('product/_delete_form.html.twig') }}
    {% endif %}

    </div>
    </div>
{% endblock %}
